	{{!-- missing trailer --}}
	<div class="modal fade" id="modal-missing_trailer" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="staticBackdropLabel">Missing trailer</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<form class="modal-form" action="/api/sendMailMissingTrailer" method="post">
					<div class="modal-body">
						<input class="displayNone" type="text" name="app_name" value="missing_trailer">
						<div class="row">
							<div class="mb-3 col-5">
								<label for="date" class="form-label"><b>Data</b></label>
								<input type="date" class="form-control report-date" id="date" aria-describedby="emailHelp" name="date" required>
							</div>
							<div class="mb-3 col-7">
								<label for="cot" class="form-label"><b>COT</b></label>
								<select class="form-select" aria-label="Default select example" id="cot" name="cot">
									{{#each cotTrailer}}
									<option selected>{{this.cot}}</option>
									{{/each}}
								</select>
							</div>
						</div>
						<div class="mb-3">
							<label for="missing_trailer_tdf" class="form-label"><b>TDF</b></label>
							<input type="text" class="form-control" id="missing_trailer_tdf" aria-describedby="emailHelp" name="tdf" maxlength="40" required>
							<div id="emailHelp" class="form-text">* możesz wprowadzić tylko 1 TDF,  ograniczenie do 40 znaków</div>
						</div>
						<div class="mb-3">
							<label for="missing_trailer_trailer" class="form-label"><b>Numer naczepy</b></label>
							<input type="text" class="form-control" id="missing_trailer_trailer" aria-describedby="emailHelp" name="trailer" required>
						</div>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Zamknij</button>
						<button id="btnActionMissingTrailer" type="submit" class="btn btn-primary" onclick="btnDisable('btnActionMissingTrailer', 'btnDisabledMissingTrailer')">Wyślij</button>
						<button id="btnDisabledMissingTrailer" type="submit" class="btn btn-primary displayNone" disabled>Wysyłanie...</button>
					</div>
				</form>
			</div>
		</div>
	</div>
