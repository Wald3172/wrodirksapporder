<header class="header">
    <div class="container-fluid header__1st-line">
        <div class="header__content">
            <a class="logo" href="/order"><img class="logo__img" src="/img/logo.png" alt="Logo Dirks"></a>
        </div>
    </div>
    <div class="container-fluid header__breadcrumbs">
        <a class="header__breadcrumbs__home" href="/order"><img src="/icons/home.svg" alt="Home"></a>
        {{#if breadcrumbs}}
        {{#each breadcrumbs}}
        <span>&mdash;</span>
        <a class="header__breadcrumbs__link" href="{{this.href}}">{{this.name}}</a>
        {{/each}}
        {{/if}}
        <span class="header__breadcrumbs__this-page">&mdash;</span>
        <span class="header__breadcrumbs__this-page">{{pageHeader}}</span>
    </div>
</header>